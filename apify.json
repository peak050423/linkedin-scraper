{
    "name": "linkedin-scraper",
    "version": "0.0.1",
    "buildTag": "latest",
    "env": {
        "APIFY_DEFAULT_KEY_VALUE_STORE_ID": "default",
        "APIFY_DEFAULT_DATASET_ID": "default",
        "APIFY_DEFAULT_REQUEST_QUEUE_ID": "default"
    },
    "dockerfile": "./Dockerfile",
    "input": {
        "type": "object",
        "properties": {
            "scraperType": {
                "type": "string",
                "enum": [
                    "1",
                    "2"
                ],
                "description": "Type of scraper: '1' for Company Followers Scraper, '2' for Post Likers Scraper"
            },
            "companyUrl": {
                "type": "string",
                "description": "URL of the LinkedIn company page (required for scraperType '1')"
            },
            "followerNumber": {
                "type": "string",
                "description": "Number of followers to scrape (required for scraperType '1')"
            },
            "postUrl": {
                "type": "string",
                "description": "URL of the LinkedIn post (required for scraperType '2')"
            }
        },
        "required": [
            "scraperType"
        ]
    }
}